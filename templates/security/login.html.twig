{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesi√≥n - Economik0{% endblock %}

{% block body %}
<section class="container py-5 d-flex justify-content-center" aria-labelledby="login-heading">
    <article class="card glass-card shadow-lg p-4" style="max-width: 450px; width: 100%;">
        {# ========== ENCABEZADO ========== #}
        <header class="card-body text-center">
            <h1 id="login-heading" class="card-title fw-bold">
                Iniciar <span class="text-accent">Sesi√≥n</span>
            </h1>
            <p class="text-muted">Accede a tu cuenta de Economik0</p>
        </header>

        {# ========== ERRORES DE AUTENTICACI√ìN ========== #}
        {% if error %}
            <div class="alert alert-danger" 
                 role="alert" 
                 aria-live="assertive"
                 id="login-error">
                <span aria-hidden="true">‚ö†Ô∏è</span>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {# ========== FORMULARIO DE LOGIN ========== #}
        <form method="post" 
              action="{{ path('app_login') }}"
              aria-label="Formulario de inicio de sesi√≥n"
              aria-describedby="{% if error %}login-error{% endif %}"
              novalidate>
            
            {# Campo Email #}
            <div class="mb-4">
                <label for="inputEmail" class="form-label fw-semibold">
                    Correo Electr√≥nico
                    <span class="text-danger" aria-hidden="true">*</span>
                </label>
                <input type="email" 
                       id="inputEmail"
                       name="email"
                       class="form-control form-control-lg" 
                       placeholder="tu@email.com"
                       value="{{ last_username }}"
                       autocomplete="email"
                       required
                       aria-required="true"
                       aria-describedby="emailHelp"
                       {% if error %}aria-invalid="true"{% endif %}
                       autofocus>
                <small id="emailHelp" class="form-text text-muted">
                    Introduce el email con el que te registraste
                </small>
            </div>

            {# Campo Contrase√±a #}
            <div class="mb-4">
                <label for="inputPassword" class="form-label fw-semibold">
                    Contrase√±a
                    <span class="text-danger" aria-hidden="true">*</span>
                </label>
                <input type="password" 
                       id="inputPassword"
                       name="password"
                       class="form-control form-control-lg" 
                       placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                       autocomplete="current-password"
                       required
                       aria-required="true"
                       aria-describedby="passwordHelp"
                       {% if error %}aria-invalid="true"{% endif %}>
                <small id="passwordHelp" class="form-text text-muted">
                    M√≠nimo 6 caracteres
                </small>
            </div>

            {# Token CSRF oculto #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# Bot√≥n de env√≠o #}
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                <span aria-hidden="true">üîê</span>
                Acceder
            </button>
        </form>

        {# ========== ENLACES ADICIONALES ========== #}
        <footer class="text-center mt-3">
            <p class="mb-2 text-muted">
                ¬øNo tienes cuenta?
            </p>
            <a href="{{ path('app_register') }}" class="btn btn-outline-secondary">
                Crear una cuenta
            </a>
        </footer>
    </article>
</section>
{% endblock %}
