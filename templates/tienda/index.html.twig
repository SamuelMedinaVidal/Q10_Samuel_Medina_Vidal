{% extends 'base.html.twig' %}

{% block title %}Tienda - Economik0{% endblock %}

{% block body %}
<div class="container py-4">
    {# Buscador y filtros #}
    <div class="hero-text-box mb-4">
        <h1 class="mb-3">Nuestra<br><span class="zero-color">Tienda</span></h1>
        <p class="lead mb-4" style="letter-spacing: -0.02em;">
            Descubre los mejores productos cerca de ti
        </p>

        <form action="{{ path('app_tienda') }}" method="get" class="search-form">
            <div class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label-custom">Buscar producto</label>
                    <input type="text" 
                           name="q" 
                           value="{{ query }}" 
                           class="form-control form-control-custom" 
                           placeholder="üîç Buscar por nombre...">
                </div>
                <div class="col-md-4">
                    <label class="form-label-custom">Categor√≠a</label>
                    <select name="categoria" class="form-control form-control-custom">
                        <option value="">Todas las categor√≠as</option>
                        {% for cat in categorias %}
                            <option value="{{ cat }}" {{ categoriaActual == cat ? 'selected' : '' }}>
                                {{ cat|replace({'-': ' '})|capitalize }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-register w-100">Buscar</button>
                </div>
            </div>
        </form>

        {% if query or categoriaActual %}
            <div class="mt-3">
                <a href="{{ path('app_tienda') }}" class="btn btn-sm btn-outline-secondary">
                    ‚úï Limpiar filtros
                </a>
                {% if query %}
                    <span class="badge bg-light text-dark ms-2">B√∫squeda: "{{ query }}"</span>
                {% endif %}
                {% if categoriaActual %}
                    <span class="badge bg-light text-dark ms-2">Categor√≠a: {{ categoriaActual|replace({'-': ' '})|capitalize }}</span>
                {% endif %}
            </div>
        {% endif %}
    </div>

    {# Grid de productos #}
    {% if productos|length > 0 %}
        <div class="row g-4">
            {% for producto in productos %}
                <div class="col-6 col-md-4 col-lg-3">
                    <a href="{{ path('app_tienda_detalle', {id: producto.id}) }}" class="product-card-link">
                        <div class="product-card">
                            <div class="product-image-wrapper">
                                {% if producto.imagen %}
                                    <img src="{{ asset('uploads/productos/' ~ producto.imagen) }}" 
                                         alt="{{ producto.nombre }}" 
                                         class="product-image">
                                {% else %}
                                    <div class="product-image-placeholder">
                                        üì¶
                                    </div>
                                {% endif %}
                                <span class="stock-indicator {{ producto.cantidad <= 0 ? 'out' : (producto.cantidad <= 5 ? 'low' : 'ok') }}">
                                    {{ producto.stockStatus }}
                                </span>
                            </div>
                            <div class="product-info">
                                <span class="product-category">{{ producto.categoria|replace({'-': ' '})|capitalize }}</span>
                                <h5 class="product-name">{{ producto.nombre }}</h5>
                                <div class="product-price">{{ producto.precio|number_format(2, ',', '.') }} ‚Ç¨</div>
                                {% if producto.ubicacion %}
                                    <small class="product-location">üìç {{ producto.ubicacion }}</small>
                                {% endif %}
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="hero-text-box text-center">
            <div class="empty-state">
                <span class="empty-icon">üîç</span>
                <h3>No se encontraron productos</h3>
                <p class="text-muted">Intenta con otros t√©rminos de b√∫squeda o categor√≠a</p>
                <a href="{{ path('app_tienda') }}" class="btn btn-register">
                    Ver todos los productos
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
